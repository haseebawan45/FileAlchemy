# Railway Environment Configuration Template
# Copy this file to .env and configure for local development that matches Railway

# Railway Environment
RAILWAY_ENVIRONMENT=production
PORT=8080

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Application Configuration
MAX_FILE_SIZE_MB=25
MAX_CONCURRENT_CONVERSIONS=1
MAX_QUEUE_SIZE=10

# Resource Limits (Railway Free Tier)
MAX_MEMORY_MB=400
CLEANUP_INTERVAL_MINUTES=5

# CORS Configuration (update with your actual domains)
ALLOWED_ORIGINS=https://haseebawan45.github.io,https://*.railway.app,https://*.up.railway.app

# Optional: Logging Level
LOG_LEVEL=INFO